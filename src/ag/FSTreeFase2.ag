-- datatypes for Formatting Structure Fase 2
DATA WindowRoot
    | WindowRoot WindowTree

DATA WindowTree
    | WindowContainer
        fcnxt: String
        props: {Map.Map String PropertyValue}
        attrs: {Map.Map String String}
        tCont: {TypeContinuation}
        bRepl: Bool
        elem : Element
    | WindowText
        props: {Map.Map String PropertyValue}
        attrs: {Map.Map String String}
        tCont: {TypeContinuation}
        text : String

DATA Element
    | EWinds winds: WindowTrees
    | ELines lines: Lines
    | ENothing

TYPE WindowTrees = [WindowTree]
TYPE Lines       = [Line]

DATA Line
